name: HopsworksVagrantMultiNode
baremetal:
    username: vagrant

cookbooks:       
  hopsworks:                                                                     
    github: "hopshadoop/hopsworks-chef"
    branch: "centos_cuda"  

attrs:
  install:
    dir: /srv/hops
    user: vagrant
  tensorflow:
    install: "src"
    mkl: "true"
  cuda:
    accept_nvidia_download_terms: "true"
    skip_test: "true"
  kagent:
    network:
      interface: eth0
  hopsworks:
    ear_url: http://snurran.sics.se/hops/hopsworks/0.1.0/hopsworks-ear.ear
    war_url: http://snurran.sics.se/hops/hopsworks/0.1.0/hopsworks.war
    ca_url: http://snurran.sics.se/hops/hopsworks/0.1.0/hopsworks-ca.war
groups: 
  namenodes:
    size: 1 
    baremetal:
      ip: 10.0.2.15
    recipes: 
      - kagent
      - ndb::mgmd
      - ndb::ndbd
      - ndb::mysqld                                                       
      - hops::ndb
      - hops::rm
      - hops::nn
      - hops::jhs
      - hadoop_spark::yarn
      - hadoop_spark::historyserver
      - flink::yarn
      - elastic
      - livy
      - zeppelin
      - kzookeeper
      - kkafka
      - epipe
      - hopsworks
      - hopsworks::dev
      - hopsmonitor
      - hopslog
      - hops::dn
      - hops::nm
      - tensorflow
      - hopsmonitor::telegraf
      
