# Copy this to .env and update values
WEB_HOST=localhost                                        # Web host local or remote
WEB_PORT=8181                                             # Web port local or remote
DB_HOST=127.0.0.1                                         # Database host local or remote
DB_PORT=3306                                              # Database port local or remote
PROJECT_DIR=<%= node['test']['hopsworks']['base_dir'] %>  # where hopsworks project is.
RSPEC_REPORT=<%= node['test']['hopsworks']['report'] %>   # where to put the report name should be test-report.html.
HOPSWORKS_API=/hopsworks-api/api                          # The path to the rest api to be tested.
HOPSWORKS_TESTING=/hopsworks-testing/api                  # The path to the rest api auxiliary endpoints - used for testing.
HOPSWORKS_BASE_API=/hopsworks-api/                        # The path to the hopsworks base api, used by proxyservlets.
HOPSWORKS_ADMIN=/hopsworks-admin/                         # The path to hopsworks admin pages.
HOPSWORKS_CA=/hopsworks-ca/v2                             # The path to hopsworks admin pages.
HOPSWORKS_DELA_TRACKER=/hopsworks-cluster/api             # The path to Dela Tracker endpoint
JENKINS=true                                              # Avoid cleaning up as we are testing with Jenkins
LAUNCH_BROWSER=false                                      # If set to true will launch test report in a browser
OS=<%= node['platform'] %>
ELASTIC_API=<%= @elastic_endpoint %>
ELASTIC_USER=<%= @elastic_user %>                         # The elastic user used for http requests
ELASTIC_PASS=<%= @elastic_pass %>                         # The elastic pass used for http requests
KIBANA_API=<%= @kibana_endpoint %>
EPIPE_HOST=<%= @epipe_host %>
MYSQL_SOCKET=/tmp/mysql.sock
PYTHON_VERSION=3.8

REMOTE_SSH_USER=vagrant					                  # User on remote machine
REMOTE_SSH_PASSWORD=vagrant				                  # Password of remote user
REMOTE_SSH_PORT=22					                      # Port on remote machine sshd listens to
SPARK_EXAMPLE_VERSION="2.12-3.1.1.4"
