    config.vm.provision :reload
    hopsworks0.vm.provision :chef_solo do |chef|
        chef.version = "14.10.9"
        chef.cookbooks_path = "cookbooks"
        chef.json = {
          "karamel" => {
	           "default" =>      {
                     "private_ips" => ["192.168.56.101","192.168.56.102","192.168.56.103"]
	           },
